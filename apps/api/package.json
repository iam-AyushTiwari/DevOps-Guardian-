{
  "name": "@devops-guardian/api",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cross-env PORT=3001 tsx watch src/index.ts",
    "build": "cd ../../packages/shared && npm run build && cd ../../apps/api && tsc",
    "build:prod": "cd ../.. && npm install && npm run build --workspace=packages/shared && npm run build --workspace=apps/api",
    "prisma:generate": "cd ../../packages/shared && npx prisma generate",
    "start": "cd ../../packages/shared && npx prisma generate && cd ../../apps/api && node dist/index.js"
  },
  "dependencies": {
    "@devops-guardian/shared": "^0.1.0",
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^22.0.1",
    "axios": "^1.13.4",
    "cors": "^2.8.5",
    "debug": "^4.4.3",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "socket.io": "^4.8.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22",
    "cross-env": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
